{
  "name": "jhr",
  "version": "0.0.8",
  "description": "Promise based XHR api that reminds you of angular's $http service.",
  "main": "build/index.js",
  "scripts": {
    "test": "./node_modules/.bin/zuul --local 4000 -- test/init.js test/client/*.js",
    "build": "./node_modules/.bin/babel -D -w src -s inline -d build",
    "bundle": "./node_modules/.bin/browserify -s JHR -t babelify src > bundle/jhr.js"
  },
  "keywords": [
    "promise",
    "bluebird",
    "xhr",
    "$http"
  ],
  "author": "Lasana Murray <lmurray@quenk.com> (http://lasana.quenk.com/)",
  "license": "Apache2",
  "dependencies": {
    "bluebird": "^2.9.25",
    "browser-cookies": "^1.0.8",
    "is": "^3.0.1",
    "parse-headers": "^2.0.0",
    "qs": "^2.4.2"
  },
  "browser": "src/index.js",
  "browserify": {
    "transform": [
      "babelify"
    ]
  },
  "devDependencies": {
    "babel": "^5.2.16",
    "babelify": "^6.0.2",
    "body-parser": "^1.12.3",
    "cookie-parser": "^1.3.4",
    "csurf": "^1.8.1",
    "mocha": "^2.2.4",
    "must": "^0.12.0",
    "zuul": "^3.0.0"
  }
}
